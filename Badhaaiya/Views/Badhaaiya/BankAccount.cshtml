                                        <div class="col-lg-4 mb-2">
                                            <div class="form-group">
                                                <h6 class="text-label">A/C Name</h6>
                                                <input type="text" name="acc_name" class="form-control" placeholder="Frontend Dev" required>
                                            </div>
